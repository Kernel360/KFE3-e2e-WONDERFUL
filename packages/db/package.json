{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "db:generate": "dotenv -e ../../.env -- prisma generate",
    "db:push": "dotenv -e ../../.env -- prisma db push",
    "db:deploy": "dotenv -e ../../.env -- prisma migrate deploy",
    "db:migrate": "dotenv -e ../../.env -- prisma migrate dev",
    "db:studio": "dotenv -e ../../.env -- prisma studio",
    "postinstall": "dotenv -e ../../.env -- prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:^0.0.0",
    "@types/node": "^22.15.3",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.9.0"
  }
}
